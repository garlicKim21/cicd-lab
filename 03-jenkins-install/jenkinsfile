pipeline {
    agent {
        kubernetes {
            serviceAccount 'jenkins'
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kubectl
    image: alpine/k8s:1.34.1
    command:
    - cat
    tty: true
"""
        }
    }
    stages {
        stage('Kubernetes와 통신 테스트') {
            steps {
                container('kubectl') {
                    script {
                        echo "--- Kubernetes 클라이언트/서버 버전 확인 ---"
                        sh "kubectl version"

                        echo "\n--- 모든 네임스페이스의 Pod 목록 조회 ---"
                        sh "kubectl get pods --all-namespaces"
                    }
                }
            }
        }
    }
}

